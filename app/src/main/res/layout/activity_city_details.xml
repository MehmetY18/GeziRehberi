<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="MEŞHUR YEMEKLERİ"
            android:textColor="#1976D2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_place2image"
            android:layout_marginLeft="24dp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginRight="24dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/citydetails_food1image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/inceekmekmuskasi"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:shapeAppearanceOverlay="@style/ShapeableImageView_ALLRoundedCorners" />

        <TextView
            android:id="@+id/citydetails_food1name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="İnce Ekmek Muskası"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/citydetails_food1image"
            app:layout_constraintTop_toTopOf="@+id/citydetails_food1image"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/citydetails_place1description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Cumhuriyetin İlanından Sonra Atatürk’ün İstanbul’daki Cumhurbaşkanlığı Konutu Olan Dolmabahçe Sarayı, 10 Kasım 1938 Tarihinde Atatürk’ün Öldüğü Yer Olması Münasebetiyle Cumhuriyet Tarihinde Ayrı Bir Öneme Sahiptir."
            android:textColor="#CC000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/citydetails_place1image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/citydetails_place1name"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_place1name"
            android:layout_marginRight="24dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/citydetails_food2image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hosmerim"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_food1image"
            app:shapeAppearanceOverlay="@style/ShapeableImageView_ALLRoundedCorners" />

        <TextView
            android:id="@+id/citydetails_food2name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Höşmerim Tatlısı"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/citydetails_food2image"
            app:layout_constraintTop_toTopOf="@+id/citydetails_food2image"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/citydetails_food2description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Birçok yörenin geleneksel lezzetleri arasında olan ve herkes tarafından sevilerek tüketilen Höşmerim Çankırı’nın da yöresel tatlıları arasında yer alıyor. Un, tereyağı ve tuz üçlüsüyle yapılan bu tatlının orijinalinde peynir de vardır. Çankırı usulü höşmerimin özelliği ise peynirsiz yapılıyor olmasıdır."
            android:textColor="#CC000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/citydetails_food2image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/citydetails_food2image"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_food2name" />

        <TextView
            android:id="@+id/citydetails_place2description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="1204 Tarihinde Trabzonda kurulan önemli bir Manastır"
            android:textColor="#CC000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/citydetails_place2image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/citydetails_place1name"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_place2name"
            android:layout_marginRight="24dp" />

        <TextView
            android:id="@+id/citydetails_place2name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Sümela Manastırı"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/citydetails_place2image"
            app:layout_constraintTop_toTopOf="@+id/citydetails_place2image"
            android:layout_marginLeft="24dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/citydetails_place2image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sumelamanastiri"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@id/citydetails_place1image"
            app:shapeAppearanceOverlay="@style/ShapeableImageView_ALLRoundedCorners" />

        <TextView
            android:id="@+id/citydetails_place1name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Dolma Bahçe Sarayı"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/citydetails_place1image"
            app:layout_constraintTop_toTopOf="@+id/citydetails_place1image"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/citydetails_food1description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Çankırı mutfağının ana yemekleri, tatlıları, çorbaları olduğu kadar hamur işleriyle de meşhurdur. Hem yapımı kolay olan hem az malzeme ile yapılabilen hem de oldukça lezzetli olan İnce Ekmek Muskası da Çankırı’nın en çok sevilen hamur işlerinde birisi."
            android:textColor="#CC000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/citydetails_food1image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/citydetails_place1name"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_food1name"
            android:layout_marginRight="24dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="DİĞER TURİSTİK YERLER"
            android:textColor="#1976D2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_getlocationbtn"
            android:layout_marginLeft="24dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginRight="24dp" />

        <TextView
            android:id="@+id/citydetails_besttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Kasımdan Şubata"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Ziyaret Edilcek En İyi Zaman"
            android:textColor="#CC000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_besttime" />

        <TextView
            android:id="@+id/citydetails_tripduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="9 saat"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_description" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Yaklaşık Yolculuk Süresi"
            android:textColor="#CC000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_tripduration" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/citydetails_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ilgaz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeableImageView_BOTTOMRoundedCorners" />

        <TextView
            android:id="@+id/citydetails_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Ilgaz Dağı Kayak Merkezi"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/citydetails_image" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="GENEL BAKIŞ"
            android:textColor="#1976D2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/citydetails_name"
            android:layout_marginLeft="24dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginRight="24dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Tanıyalım"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/citydetails_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Ilgaz Dağı'nda olan kayak merkezi telesiyejde yukarıya çıkıp kayak yapilir, profesyonel için uygun pisti vardır. Kayak takımı kiralayabilirsiniz fiyatları diğer yerlere göre uygundur. Ayrıca uygulama otelleri ve diğer otellerde rahat ve temizdir."
            android:textColor="#CC000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginRight="24dp" />

        <Button
            android:id="@+id/citydetails_getlocationbtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#1976D2"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="KONUMU"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/citydetails_place1image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ilgaz"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:shapeAppearanceOverlay="@style/ShapeableImageView_ALLRoundedCorners" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>